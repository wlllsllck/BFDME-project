<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<% include ./head %>
	
	p.big {
		line-height: 1.8;
	}
	
	input[type=submit] {
		width: 100%;
		background-color: #99FF99;
		color: white;
		padding: 14px 20px;
		margin: 8px 0;
		border: none;
		border-radius: 4px;
		cursor: pointer;
    }
    input[type=submit]:hover {
        background-color: #66FF66;
    }
</style>
<script type="text/javascript" src= "/javascripts/profile.js"></script>
</head>

<body>
	<header>
		<% include ./init_header %>
	</header>
				
<div class="container">

	<div class="page-header text-center">
		<h1> Welcome <%= user.username %> </h1>
		<!-- <a href="/logout" class="btn btn-default btn-sm">Logout</a> -->
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<!-- left panel -->
		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="well">
				<h3><span class="fa fa-user"></span> User Information </h3>

					<p class="big">
						<strong>id</strong>: <%= user.id %><br>
						<strong>username</strong>: <%= user.username %><br>
						<!-- <strong>uploaded file</strong>: <%= user.length %><br> -->
					</p>

			</div>
			<div class="well">
				<h3> Filter </h3>
				<form action="/profile/<%= user.id %>/filter" class="FilterFile" method="post">
					<div class="form-group">
						<label for="month"> month </label>
						<select class="form-control month" id="month" name="month">
							<option>None</option>
							<option>January</option>
							<option>February</option>
							<option>March</option>
							<option>April</option>
							<option>May</option>
							<option>June</option>
							<option>July</option>
							<option>August</option>
							<option>September</option>
							<option>October</option>
							<option>November</option>
							<option>December</option>
						  </select>
						<!-- <input type="text" class="form-control month" id="month" name="month"> -->
						
					</div>
					<div class="form-group">
						<label> year </label>
						<input type="text" class="form-control year" id="year" name="year">
						<small class="form-text text-muted">ex. 2016, 2017, 2018, ...</small>	
					</div>
					<div class="form-group">
						<label> file name </label>
						<input type="text" class="form-control file_name" id="file_name" name="file_name">
						<small class="form-text text-muted">ex. Hello.jpg, World.mp4, ...</small>	
						</div>
					<br>
					<br>
					<input type="submit" value="Filter">  
				</form>
			</div>
		</div>
		<!-- DOWNLOAD LIST -->
		<!-- right panel -->
		<div class="col-xs-12 col-sm-6 col-md-8">
                <h3><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> No search result found </h3>
                <p>
                    <br>
                    
                    <br>
                </p>
		</div>
			

</div>
	<br><br><br>

	<footer>
		<% include ./footer %>
	</footer>
</div>
</body>
</html>