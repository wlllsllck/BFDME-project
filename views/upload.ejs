<!doctype html>
<html>
<head>
    <% include ./head %>
    input[type=submit] {
		width: 100%;
		background-color: #00CC00;
		color: white;
		padding: 14px 20px;
		margin: 8px 0;
		border: none;
		border-radius: 4px;
		cursor: pointer;
    }
    input[type=submit]:hover {
        background-color: #009900;
    }
    </style>
    <script type="text/javascript" src= "/javascripts/upload.js"></script>
</head>

<body>
	<header>
		<% include ./header %>
    </header>
<div class="container">
    
        <div class="row">
            <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-sm-6 col-sm-offset-6">
                        <!-- <span class="glyphicon glyphicon-custom glyphicon-cloud-upload"></span> -->
                        <h3>File Uploader</h3>
                        <h4>Blockchain</h4>
                        <br>
                    </div>
                <!-- <div class="progress">
                    <div class="progress-bar" role="progressbar"></div>
                </div> -->
                    <div class="col-sm-6">
                            <div class="well">
                                <h3><span class="fa fa-user"></span> User Information </h3>
                                    <p>
                                        <strong>id</strong>: <%= user[0].user_id %><br>
                                        <strong>username</strong>: <%= user[0].username %><br>
                                        <!-- <strong>password</strong>: <%= user.password %> -->
                                    </p>
                        </div>
                    </div>

                    <div class="col-sm-6 ">

                        <form action="/upload" class="UploadFile" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label> user_id </label>
                                <input disabled="disabled" type="number" class="form-control user_id" value= <%= user[0].user_id %> >
                                <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                            </div>
                            <div class="form-group">
                                <label> username </label>
                                <input disabled="disabled" type="text" class="form-control username" value="<%= user[0].username %>">
                                <!-- <small class="form-text text-muted">e.g. 2018, 2017, 2016, ...</small> -->
                            </div>
                            <div class="form-group">
                                <label>Files</label>
                                <input type="file" class="form-control files" id="files" name="file">
                            </div>
                            <br>
                            <br>
                            <input type="submit" value="Upload">  
                        </form>

                    </div>
                </div>
            </div>
            </div>
        </div>
          
        
        <footer>
            <% include ./footer %>
        </footer>
</div>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>

</body>
</html>